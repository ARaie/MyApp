<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.janari.SimpleDailyBudgetApp.NavigationDrawerActivity"
    tools:showIn="@layout/app_bar_navigation_drawer">


        <TextView
            android:id="@+id/daily_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_today"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="34sp"
            android:layout_marginTop="56dp"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/expences"
            android:layout_width="112dp"
            android:layout_height="105dp"
            android:layout_below="@+id/daily_sum"
            android:layout_marginTop="37dp"
            android:layout_toStartOf="@+id/daily_sum"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/HelloText"
            android:layout_width="147dp"
            android:layout_height="28dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="60dp"
            android:text="Today's budget"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/date_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HelloText"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="112dp"
            android:layout_height="105dp"
            android:layout_alignTop="@+id/expences"
            android:layout_toEndOf="@+id/oo"
            android:text="-"
            android:textColor="@color/background"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/expences"
            app:layout_constraintTop_toBottomOf="@+id/date_today" />

        <TextView
            android:id="@+id/all_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/expences"
            android:layout_below="@+id/expences"
            android:layout_marginTop="58dp"
            android:text="All free money for period" />

        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/all_left"
            android:layout_alignBottom="@+id/all_left"
            android:layout_toEndOf="@+id/HelloText"
            android:textAppearance="@android:style/TextAppearance.Material.Large" />

        <Button
            android:id="@+id/showExpenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/exp"
            android:layout_toEndOf="@+id/HelloText"
            android:text="Expenses" />

        <EditText
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/expences"
            android:layout_below="@+id/expences"
            android:ems="10"
            android:hint="Note"
            android:inputType="text"
            android:textAppearance="@android:style/TextAppearance.Material.Small" />

        <EditText
            android:id="@+id/oo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="ID"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="374dp" />

        <TextView
            android:id="@+id/original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/exp"
            android:layout_width="58dp"
            android:layout_height="19dp"
            android:layout_marginBottom="43dp"
            android:layout_marginEnd="124dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

    </RelativeLayout>


