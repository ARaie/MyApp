<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.janari.SimpleDailyBudgetApp.NavigationDrawerActivity"
    tools:showIn="@layout/app_bar_navigation_drawer">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/for_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.janari.SimpleDailyBudgetApp.MainActivity"
        tools:showIn="@layout/activity_main">

        <TextView
            android:id="@+id/daily_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.258" />

        <EditText
            android:id="@+id/expences"
            android:layout_width="134dp"
            android:layout_height="93dp"
            android:layout_marginBottom="200dp"
            android:layout_marginEnd="138dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="110dp"
            android:ems="10"
            android:hint="enter expenses "
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.259"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/daily_sum"
            app:layout_constraintVertical_bias="0.716" />

        <TextView
            android:id="@+id/HelloText"
            android:layout_width="147dp"
            android:layout_height="28dp"
            android:layout_marginBottom="45dp"
            android:layout_marginEnd="132dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="49dp"
            android:text="Today's budget"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/daily_sum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_today"
            android:layout_width="145dp"
            android:layout_height="41dp"
            android:layout_marginEnd="134dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_constraintBottom_toTopOf="@+id/daily_sum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/HelloText" />

        <Button
            android:id="@+id/button"
            android:layout_width="112dp"
            android:layout_height="105dp"
            android:layout_marginBottom="199dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="85dp"
            android:text="-"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/expences"
            app:layout_constraintTop_toBottomOf="@+id/date_today" />

        <EditText
            android:id="@+id/oo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="ID"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="374dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <!--<Button
            android:id="@+id/ooo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43dp"
            android:layout_marginEnd="215dp"
            android:layout_marginStart="81dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />-->

        <TextView
            android:id="@+id/original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/exp"
            android:layout_width="58dp"
            android:layout_height="19dp"
            android:layout_marginBottom="43dp"
            android:layout_marginEnd="124dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ooo"
            app:layout_constraintTop_toBottomOf="@+id/button" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>

