<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:weightSum="3" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:orientation="vertical" android:layout_height="0dp" android:layout_width="match_parent" android:gravity="center_horizontal" android:layout_weight="2">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center" android:textSize="28sp" android:text="Pere eelarve
" android:layout_marginBottom="16dp" android:id="@+id/title_text"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center" android:textSize="14sp" android:text="Signed Out" android:id="@+id/status" android:padding="4dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center" android:textSize="14sp" tools:text="Firebase User ID: 123456789abc" android:id="@+id/detail" android:padding="4dp"/>

</LinearLayout>

    <RelativeLayout android:layout_height="0dp" android:layout_width="fill_parent" android:gravity="center_vertical" android:layout_weight="1" android:background="#E0E0E0">

        <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/email_password_fields" android:paddingRight="16dp" android:paddingLeft="16dp">

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1" android:id="@+id/edt_email" android:inputType="textEmailAddress" android:hint="Email"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1" android:id="@+id/edt_password" android:inputType="textPassword" android:hint="Password"/>

</LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/email_password_buttons" android:paddingRight="16dp" android:paddingLeft="16dp" android:layout_below="@+id/email_password_fields">

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1" android:text="Sign In" android:id="@+id/btn_email_sign_in" android:layout_marginRight="4dp" android:layout_marginLeft="4dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1" android:text="Create Account" android:id="@+id/btn_email_create_account" android:layout_marginRight="4dp" android:layout_marginLeft="4dp"/>

</LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/layout_signed_in_control" android:paddingRight="16dp" android:paddingLeft="16dp" android:visibility="gone" android:layout_centerInParent="true">

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1" android:text="Sign Out" android:id="@+id/btn_sign_out"/>

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1" android:text="Test Message" android:id="@+id/btn_test_message"/>

</LinearLayout>

</RelativeLayout>

</LinearLayout>
