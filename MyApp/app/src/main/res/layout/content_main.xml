<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.janari.myapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/daily_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50.00"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258" />

    <EditText
        android:id="@+id/expences"
        android:layout_width="134dp"
        android:layout_height="93dp"
        android:layout_marginBottom="230dp"
        android:layout_marginEnd="138dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="99dp"
        android:ems="10"
        android:hint="enter expenses "
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.259"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daily_sum"
        app:layout_constraintVertical_bias="0.716" />

    <TextView
        android:id="@+id/HelloText"
        android:layout_width="147dp"
        android:layout_height="28dp"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="132dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="49dp"
        android:text="Today's budget"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/daily_sum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/date_today"
        android:layout_width="105dp"
        android:layout_height="55dp"
        android:layout_marginEnd="76dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="20.11.2017"
        android:inputType="date"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/daily_sum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HelloText"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
